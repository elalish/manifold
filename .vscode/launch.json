  "version": "0.2.0",
  "configurations": [
    {
      "name": "manifold test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/test/manifold_test",
      "args": [
        "--gtest_break_on_failure",
        "--gtest_filter=Manifold.GetMesh"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/test",
      "environment": [
        {
          "name": "MALLOC_CHECK_",
          "value": "2"
        }
      ]
    }
  ]
}