{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Current File with Arguments",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/visualizer-polygon.py",
      "console": "integratedTerminal",
      "args": [
        "${workspaceFolder}/result.txt",
      ],
    },
    {
      "name": "manifold test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/test/manifold_test",
      "args": [
        "--gtest_catch_exceptions=0",
        "--gtest_filter=Polygon.Fillet.Rect"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/test",
      "environment": [
        {
          "name": "MALLOC_CHECK_",
          "value": "2"
        }
      ],
      "externalConsole": false
    },
    {
      "name": "OffsetMain",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/proj/OffsetMain",
      "args": [
        "--gtest_catch_exceptions=0",
        "--gtest_filter=Polygon.Fillet.Rect"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/test",
      "environment": [
        {
          "name": "MALLOC_CHECK_",
          "value": "2"
        }
      ],
      "externalConsole": false
    },
  ]
}